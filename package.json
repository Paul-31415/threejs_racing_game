{
    "name": "threejs_racing_game",
    "version": "0.1.0",
    "private": true,
    "devDependencies": {
        "@types/node": "^18.11.17",
        "esbuild": "^0.16.10",
        "nova_ecs": "^0.3.3",
        "pixi.js": "^7.0.5",
        "rimraf": "^3.0.2",
        "typescript": "^4.9.4"
    },
    "scripts": {
        "serve": "yarn esbuild --bundle game/index.ts --serve --servedir=game --sourcemap --resolve-extensions=.mjs,.js",
        "build": "rimraf dist && mkdir dist && yarn esbuild --bundle game/index.ts --outfile=dist/index.js --sourcemap --minify --resolve-extensions=.mjs,.js && cp game/index.html dist"
    },
    "dependencies": {
        "@types/three": "^0.146.0",
        "fastify": "^4.10.2",
        "fastify-static": "^4.7.0",
        "three": "^0.148.0"
    }
}
